<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.proxy.https</string>
    <key>ProgramArguments</key>
    <array>
        <string>/opt/https-proxy/https-proxy</string>
        <string>--config</string>
        <string>/etc/https-proxy/config.json</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>WorkingDirectory</key>
    <string>/opt/https-proxy</string>
    <key>StandardErrorPath</key>
    <string>/var/log/https-proxy/error.log</string>
    <key>StandardOutPath</key>
    <string>/var/log/https-proxy/output.log</string>
    <key>ThrottleInterval</key>
    <integer>5</integer>
</dict>
</plist> 